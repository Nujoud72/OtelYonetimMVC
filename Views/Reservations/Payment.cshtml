@using OtelYonetimMVC.Models
@model Reservation

<h2 class="mb-3">Ödeme Al</h2>

@if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
{
    <div asp-validation-summary="All" class="alert alert-danger"></div>
}

<div class="card p-3">
    <p><strong>Müşteri:</strong> @Model.CustomerName</p>
    <p><strong>Oda:</strong> @Model.Room?.RoomNumber</p>
    <p>
        <strong>Tarih:</strong>
        @Model.CheckInDate.ToString("dd.MM.yyyy") -
        @Model.CheckOutDate.ToString("dd.MM.yyyy")
    </p>

    <hr />

    <form method="post">
        <input type="hidden" name="id" value="@Model.Id" />

        <div class="mb-3">
            <label class="form-label">Toplam Tutar (₺)</label>
            <input class="form-control" type="number" step="0.01" name="totalPrice" />
        </div>

        <div class="mb-3">
            <label class="form-label">Ödeme Yöntemi</label>
            <select class="form-select" name="paymentMethod">
                <option value="Cash">Nakit</option>
                <option value="CreditCard">Kredi Kartı</option>
            </select>
        </div>

        <button class="btn btn-success">
            <i class="fa-solid fa-check"></i> Ödemeyi Onayla
        </button>

        <a class="btn btn-outline-secondary" href="/Reservations">
            İptal
        </a>
    </form>
</div>
