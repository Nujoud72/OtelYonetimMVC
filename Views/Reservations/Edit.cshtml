@model OtelYonetimMVC.Models.Reservation

<h2 class="mb-3">Rezervasyon Düzenle</h2>

<div class="card p-3">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">Müşteri Adı</label>
            <input asp-for="CustomerName" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Oda</label>
            <select asp-for="RoomId"
                    asp-items="ViewBag.Rooms"
                    class="form-select">
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Giriş Tarihi</label>
            <input asp-for="CheckInDate" type="date" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Çıkış Tarihi</label>
            <input asp-for="CheckOutDate" type="date" class="form-control" />
        </div>

        <button class="btn btn-primary">Güncelle</button>
        <a class="btn btn-outline-secondary" href="/Reservations">İptal</a>
    </form>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary(false)
        </div>
    }

</div>
