@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Giriş Yap</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light d-flex justify-content-center align-items-center" style="height:100vh;">

    <div class="card p-4" style="width:300px;">
        <h4 class="mb-3 text-center">Giriş Yap</h4>

        <form method="post">
            <input name="username" class="form-control mb-3" placeholder="Kullanıcı adı" />

            @if (ViewBag.Error != null)
            {
                <div class="text-danger mb-2">@ViewBag.Error</div>
            }

            <button class="btn btn-primary w-100">Giriş</button>
        </form>

        <p class="text-muted mt-3 small text-center">
            admin → Yönetici<br />
            resepsiyon → Resepsiyon
        </p>
    </div>

</body>
</html>
