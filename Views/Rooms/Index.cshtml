@using OtelYonetimMVC.Models
@model List<RoomStatusVM>

@{
    var role = Context.Session.GetString("Role");
    bool isAdmin = role == "Yonetici";
}

<h2 class="mb-2">Oda Yönetimi</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <input type="text"
               name="search"
               value="@Context.Request.Query["search"]"
               class="form-control"
               placeholder="Oda numarası veya durum ara (Boş/Dolu/Temizlikte)..." />
    </div>

    <div class="col-md-2">
        <button class="btn btn-outline-primary w-100">
            <i class="fa-solid fa-magnifying-glass"></i> Ara
        </button>
    </div>

    <div class="col-md-2">
        <a href="/Rooms" class="btn btn-outline-secondary w-100">
            Temizle
        </a>
    </div>
</form>

@if (isAdmin)
{
    <a class="btn btn-primary mb-3" href="/Rooms/Create">+ Oda Ekle</a>
}

<div class="card p-3">
    <table class="table table-striped align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th>Oda</th>
                <th>Durum</th>
                @if (isAdmin)
                {
                    <th style="width:180px;">İşlemler</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model)
            {
                <tr>
                    <td><strong>@room.RoomNumber</strong></td>
                    <td>
                        <span class="badge @(room.Status == "Boş" ? "bg-success" : room.Status == "Dolu" ? "bg-danger" : "bg-warning text-dark")">
                            @room.Status
                        </span>
                    </td>

                    @if (isAdmin)
                    {
                        <td>
                            <a class="btn btn-sm btn-outline-secondary" href="/Rooms/Edit?roomNumber=@room.RoomNumber">Düzenle</a>
                            <a class="btn btn-sm btn-outline-danger" href="/Rooms/Delete?roomNumber=@room.RoomNumber">Sil</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
